{{#md-card}}
  {{#md-card-content}}
    <div class="row">
      {{tweet-categories
        categories=categories
        selection=categoryComp
        }}
    </div>
    <div class="row">
      {{tweet-input value=model.tweetText label="Tweet Text"}}
    </div>
    <div class="row">
      <div class="col s6">
        {{twitter-user value=model.user}}
      </div>
      <div class="col s6">
        {{tweet-link value=model.url}}
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        Select Hashtags:
      </div>
      <div class="col s6">
        {{#each checkboxes as |hashtag|}}
          {{tweet-hashtags hashtag=hashtag.content checked=hashtag.checked}}
        {{/each}}
      </div>
    </div>
    <div class="row">
      {{tweet-input value=preview}}
    </div>
  {{/md-card-content}}
  {{#md-card-action}}
    {{md-btn-submit icon='mdi-content-send'
      iconPosition='right'
      text='Save'
      action='saveTweet'}}
    {{md-btn-submit
      text='Cancel'
      action='cancelEditing'}}
  {{/md-card-action}}
{{/md-card}}
